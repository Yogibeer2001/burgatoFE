<div class="container">
  <h4 class="center-align">Detailed Review!</h4>
  <p class="center-align">
    See the detailed review below:
  </p>
  <<div class="center-align" >
  {{#link-to 'burger-places.index' class="waves-effect waves-light red btn"}} Return to search
  {{/link-to}}
  </div>


</div>
  <article class="name">
    <h4>{{model.name}}</h4>
    <div class="rating left-align">
      <span>Overall Rating:</span> {{model.reviewScore}}
    </div>
    <div class="detail type">
      <span>Location:</span> {{model.address}}, {{model.suburb}}, {{model.post-code}}<br>
      <span>Contact: </span> {{model.phoneNo}} <br>
      <span>Web: </span> {{model.webAddress}}
    </div>

  </article>
  <table class="striped centered">
       <thead>
         <tr>
              <th data-field="id">Review No.</th>
             <th data-field="id">Bun</th>
             <th data-field="name">Patty</th>
             <th data-field="price">Chips</th>
             <th data-field="price">Atmosphere</th>
             <th data-field="price">Value</th>
         </tr>
       </thead>
       <tbody>
         {{#each model.reviews as |review|}}
         <tr>
           <td>{{review.id}}</td>
           <td>{{star-rating item=review rating=review.bun fullClassNames='fa fa-star' emptyClassNames='' }}</td>
           <td> {{star-rating item=review rating=review.patty fullClassNames='fa fa-star' emptyClassNames='' }}</td>
           <td> {{star-rating item=review rating=review.chips fullClassNames='fa fa-star' emptyClassNames='' }}</td>
           <td> {{star-rating item=review rating=review.atmosphere fullClassNames='fa fa-star' emptyClassNames='' }}</td>
           <td> {{star-rating item=review rating=review.chips fullClassNames='fa fa-star' emptyClassNames='' }}</td>
         </tr>
         {{/each}}
         {{#link-to 'burger-places.review' model class="waves-effect waves-light red btn "}} Add Review
         {{/link-to}}

       </tbody>

     </table>
